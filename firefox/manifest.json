{
    "manifest_version": 3,
    "name": "GeoGuessr Stats",
    "version": "0.2.0",
    "description": "Collect records of your party GeoGuessr games.",
    "action": {
        "default_title": "GeoGuessr Stats"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{190b7079-27a7-47af-8018-cb6bfcb35711}"
        }
    },
    "icons": {
        "128": "assets/images/icon.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": ["https://www.geoguessr.com/*"],
            "js": ["content_scripts/content_main.js"],
            "run_at": "document_start",
            "world": "MAIN"
        },
       {
            "matches": ["https://www.geoguessr.com/*"],
            "js": ["content_scripts/content_isolated.js"],
            "run_at": "document_start",
            "world": "ISOLATED"
       }
    ],
    "permissions": [
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "*://*.geoguessr.com/*"
    ],
    "web_accessible_resources": [
    {
      "resources": [
        "assets/icons/*.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}